  "scripts": {
    "dev:server": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/server.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migrate:prod": "yarn typeorm migration:run",
    "transpile": "rimraf dist && babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "build": "yarn transpile && rimraf build && rollup -c rollup.config.js && rimraf dist",
    "start": "node build/app/server.js"
  },
  "dependencies": {
    "@fastify/cors": "^8.1.0",
    "@fastify/multipart": "^7.1.1",
    "@fastify/static": "^6.5.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "date-fns": "^2.29.1",
    "dotenv": "^16.0.1",
    "elastic-apm-node": "^3.38.0",
    "fastify": "^4.4.0",
    "fastify-helmet": "^7.1.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@faker-js/faker": "^6.1.2",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/bcrypt": "^5.0.0",
    "@types/busboy": "^1.5.0",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.2.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.3",
    "rollup-plugin-terser": "^7.0.2",
    "terser": "^5.14.2",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.3.1",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
